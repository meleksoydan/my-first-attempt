# Basit Hesap Makinesi

def toplama(a, b):
    return a + b

def cikarma(a, b):
    return a - b

def carpma(a, b):
    return a * b

def bolme(a, b):
    if b != 0:
        return a / b
    else:
        return "Sıfıra bölme hatası!"

# Örnek kullanım
print(toplama(5, 3))
print(cikarma(5, 3))
print(carpma(5, 3))
print(bolme(5, 1))
